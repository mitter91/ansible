[Unit]
Description=mysql_db check app
After=network.target

[Service]
Type=simple
EnvironmentFile={{ mysql_check_dir }}/conf/mysql-check.conf
ExecStart={{ mysql_check_dir }}/bin/mysql-check
ExecStop=/bin/kill -s QUIT $MAINPID
User=mysql-check
Group=mysql-check


[Install]
WantedBy=multi-user.target
